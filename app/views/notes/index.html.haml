.wrapper_with_padding
	#notes.clearfix
		- unless @notes.blank?
			- @notes.each do |note|
				%a{ href: (url_for [note])}
					.note
						%p.title= note.title
						%p.date
							= time_ago_in_words(note.created_at)
							ago
		- else
			%h2 Add a note
			%p You haven't created any notes yet. Let's create one now.
			%button= link_to "New Note", new_note_path